/* pages/club-msg/index.wxss */

page, .club-msg {
  background-color: #333;
  height: 100%;
  overflow: auto;
}

.club-msg-head {
  width: 716rpx;
  height: 264rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 16rpx auto 60rpx;
  letter-spacing: 3rpx;
}

.club-msg-name {
  height: 202rpx;
  box-sizing: border-box;
  padding: 34rpx 0 0 22rpx;
  display: flex;
  align-items: center;
}

.guy-pic {
  width: 100rpx;
  height: 100rpx;
  background-color: #ffffff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.club-msg-text {
  height: 62rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.club-title {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  margin-bottom: 10rpx;
}

.msg {
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

.club-daunWei {
  height: 62rpx;
  background-color: #fff;
  border-radius: 0px 0px 14rpx 14rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 24rpx;
}

.club-daunWei text {
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(153, 153, 153, 1);
}

.guy-list {
  width: 716rpx;
  height: 132rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 0 auto 44rpx;
  box-sizing: border-box;
  padding: 0 38rpx 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.guy-list-left {
  height: 100%;
  width: 80%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.guy-list-right {
  height: 100%;
  width: 20%;
}

.li {
  height: 100%;
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.iamge {
   width: 66rpx;
  height: 66rpx;
  margin-bottom: 10rpx;
  background-color: #ffffff;
  border-radius: 50%;
}

.guy-list-right {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-weight: bold;
  color: rgba(255, 192, 0, 1);
}

/* 战绩 */

.zhanji-main {
  width: 706rpx;
  height: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 36rpx 26rpx 0;
  letter-spacing: 4rpx;
  border-top: 6rpx solid rgba(67, 67, 67, 1);
  border-bottom: 6rpx solid rgba(67, 67, 67, 1);
}

.zhanji-main image {
  width: 78rpx;
  height: 76rpx;
  margin-right: 30rpx;
}

.zj-left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.zhanji-text, .zhanji-num {
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.zhanji-num {
  align-items: flex-end;
}

#zhanji, #all-num {
  font-size: 28rpx;
  font-weight: 800;
  color: rgba(255, 255, 255, 1);
}

#shenglv, #bfb {
  font-size: 24rpx;
  font-weight: 800;
  color: rgba(225, 77, 94, 1);
}

.create-btn, .create-btn image {
  width: 270rpx;
  height: 80rpx;
}

.create-btn {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 580rpx auto 0;
  padding-bottom: 60rpx;
}

.create-btn text {
  position: absolute;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(195, 109, 22, 1);
}

.shi image {
  width: 24rpx;
  height: 12rpx;
  margin-left: 18rpx;
}
