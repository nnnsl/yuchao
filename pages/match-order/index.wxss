/* pages/match-order/index.wxss */

page {
  height: 100%;
  background-color: #333333;
  overflow: hidden;
}

.msg {
  width: 716rpx;
  height: 534rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14px;
  margin: 26rpx auto;
}

.msg-tittle, .pay-msg-tittle {
  height: 100rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 100rpx;
}

.msg-tittle text, .pay-msg-tittle text {
  margin-left: 24rpx;
}

.msg-main {
  height: 260rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 26rpx;
}

.msg-main image {
  width: 24rpx;
  height: 26rpx;
  margin-right: 20rpx;
}

.li {
  display: flex;
  justify-content: space-between;
}

.main-left {
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  display: flex;
  align-items: center;
}

.main-right {
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.ewm {
  width: 276rpx;
  height: 110rpx;
  background: rgba(210, 210, 210, 1);
  border-radius: 6px;
  margin: 30rpx auto;
}

/* 支付信息 */

.pay-msg {
  width: 716rpx;
  height: 252rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 46rpx auto 0;
}

.pay-msg-main {
  height: 152rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

.pay-money, .pay-num {
  display: flex;
  justify-content: space-between;
}

.pay-money view, .pay-num view {
  color: rgba(255, 255, 255, 1);
}
