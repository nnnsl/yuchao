/* pages/yy-Order/index.wxss */

page, .yy-Order {
  height: 100%;
  background-color: #333333;
}

.bs-msg {
  width: 716rpx;
  height: 578rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14px;
  margin: 16rpx auto;
}

.msg-tittle {
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.msg-tittle text {
  line-height: 100rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.msg-main {
  height: 300rpx;
  box-sizing: border-box;
  padding: 30rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.li {
  display: flex;
  justify-content: space-between;
}

.erwm {
  width: 276rpx;
  height: 110rpx;
  background: rgba(210, 210, 210, 1);
  border-radius: 6px;
  margin: 20rpx auto;
  font-size: 22rpx;
  font-weight: bold;
  line-height: 110rpx;
  text-align: center;
}

.pay-msg {
  width: 716rpx;
  height: 258rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 20rpx auto;
}

.pay-title {
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.pay-main {
  height: 156rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.pay-li{
  display: flex;
  justify-content: space-between;
}