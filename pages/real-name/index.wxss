/* pages/real-name/index.wxss */

page, .real-name {
  background-color: #333;
  height: 100%;
  overflow: hidden;
}

.input-main {
  width: 716rpx;
  height: 214rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 20rpx auto;
  color: #999;
  font-size: 24rpx;
}

.name, .IDcard {
  height: 49%;
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.name {
  border-bottom: 2rpx solid #999;
}

.name input, .IDcard input {
  color: #d7d7d7;
}

.name input {
  margin-left: 120rpx;
}

.IDcard input {
  margin-left: 100rpx;
}

.pic-title {
  font-size: 34rpx;
  color: rgba(255, 255, 255, 1);
  margin: 20rpx;
}

.pic-btn {
  width: 716rpx;
  height: 210rpx;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-between;
}

.idPic {
  width: 49%;
  height: 210rpx;
}

.pic-btn image {
  width: 100%;
  height: 100%;
}

.upload-btn {
  position: relative;
  margin: 50rpx auto;
}

.upload-btn, .upload-btn image, .text {
  width: 270rpx;
  height: 80rpx;
}

.text {
  position: absolute;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(195, 109, 22, 1);
  line-height: 80rpx;
  text-align: center;
}
