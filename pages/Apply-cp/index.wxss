/* pages/Apply_cp/index.wxss */

page, .Apply_cp {
  height: 100%;
  background-color: #333333;
  overflow: hidden;
}

.Apply_main {
  width: 716rpx;
  height: 318rpx;
  background: rgba(67, 67, 67, 1);
  border-radius: 14rpx;
  margin: 20rpx auto 100rpx;
  color: #999999;
  font-size: 24rpx;
}

.name, .phone, .papers {
  width: 100%;
  height: 33%;
  box-sizing: border-box;
  padding-left: 30rpx;
  display: flex;
  align-items: center;
}

.name, .phone {
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.name input, .phone input {
  color: #d7d7d7;
  margin-left: 100rpx;
}

.papers text {
  display: inline-block;
  margin-right: 80rpx;
}

.submit-btn {
  position: relative;
  margin: 80rpx auto;
}

.submit-btn, .submit-btn image, .text {
  width: 270rpx;
  height: 80rpx;
}

.text {
  position: absolute;
  font-size: 26rpx;
  font-weight: 800;
  color: rgba(195, 109, 22, 1);
  line-height: 80rpx;
  text-align: center;
}
